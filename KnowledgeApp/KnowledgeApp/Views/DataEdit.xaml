<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:KnowledgeApp.ViewModels"
             x:Class="KnowledgeApp.Views.DataEdit">

    <ContentPage.BindingContext>
        <viewmodels:DataDetailEditModel></viewmodels:DataDetailEditModel>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Title" FontSize="Medium"/>
            <Entry Text="{Binding Title}" FontSize="Small"/>
            <Label Text="Description" FontSize="Medium"/>
            <Entry Text="{Binding Description}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>