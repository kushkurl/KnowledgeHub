<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:KnowledgeApp.ViewModels"
             x:Class="KnowledgeApp.Views.DataNew">

    <ContentPage.BindingContext>
        <viewmodels:DataNewViewModel></viewmodels:DataNewViewModel>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ContentPage.Content>
            <StackLayout>
                <Label Text="Title" FontSize="Medium"/>
                <Entry Text="{Binding Title}" FontSize="Small"/>
                <Label Text="Description" FontSize="Medium"/>
                <Entry Text="{Binding Description}" FontSize="Small"/>
            </StackLayout>
        </ContentPage.Content>
</ContentPage>